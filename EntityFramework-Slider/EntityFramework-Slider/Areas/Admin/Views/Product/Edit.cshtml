@model ProductEditVM
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<div style="padding-left:200px" class="container my-5">

    <span class="text-danger">@ViewBag.error</span>
    <form class="forms-sample" style="display:inline-block" asp-action="Edit" method="post" enctype="multipart/form-data">
        <label>Add New Title</label>
        <input class="form-control" type="text" id="customFile" asp-for="Name" />
        <span class="text-danger" asp-validation-for="Name"></span>
        <label>Add New Description</label>
        <input class="form-control" type="text" id="customFile" asp-for="Description" />
        <span class="text-danger" asp-validation-for="Description"></span>
        <label>Add New Count</label>
        <input class="form-control" type="number" step=".01" id="customFile" asp-for="Count" />
        <span class="text-danger" asp-validation-for="Count"></span>
        <label>Add New Price</label>
        <input class="form-control" type="number" step=".01" id="customFile" asp-for="Price" />
        <span class="text-danger" asp-validation-for="Price"></span>

        <div class="form-group">
            <label class="mt-3">Choose Product's Category</label>
            <select class="form-control" id="customFile" asp-for="CategoryId" asp-items="@ViewBag.categories"></select>
        </div>
        
        @foreach (var item in Model.Images)
        {
            <img style="width:150px;height:150px;margin-top:30px" src="~/img/@item.Image" />
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" data-id="@item.Id" class="bi bi-trash deletePhoto" style="width:25px;height:25px;color:saddlebrown">
                viewBox="0 0 16 16">
                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z" />
                <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z" />
            </svg>
        }

        <div class="from-group my-3">
            <label class="mt-5">Add Photo</label>
            <input class="form-control" id="customFile" asp-for="Photos">
            <span class="text-danger" asp-validation-for="Photos"></span>
        </div>
        
        <div class="buttons my-3">
            <button type="submit" class="btn btn-success">Submit</button>
            <a asp-action="Index" class="btn btn-light">Cancel</a>
        </div>
    </form>
</div>

