@model ProductEditVM
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<div style="padding-left:200px" class="container my-5">

    <span class="text-danger">@ViewBag.error</span>
    <form class="forms-sample" style="display:inline-block" asp-action="Edit" method="post" enctype="multipart/form-data">
        <label>Add New Title</label>
        <input class="form-control" type="text" id="customFile" asp-for="Name" />
        <span class="text-danger" asp-validation-for="Name"></span>
        <label>Add New Description</label>
        <input class="form-control" type="text" id="customFile" asp-for="Description" />
        <span class="text-danger" asp-validation-for="Description"></span>
        <label>Add New Count</label>
        <input class="form-control" type="number" step=".01" id="customFile" asp-for="Count" />
        <span class="text-danger" asp-validation-for="Count"></span>
        <label>Add New Price</label>
        <input class="form-control" type="number" step=".01" id="customFile" asp-for="Price" />
        <span class="text-danger" asp-validation-for="Price"></span>

        <div class="form-group">
            <label class="mt-3">Choose Product's Category</label>
            <select class="form-control" id="customFile" asp-for="CategoryId" asp-items="@ViewBag.categories"></select>
        </div>
        
        @foreach (var item in Model.Images)
        {
            <img style="width:150px;height:150px;margin-top:30px" src="~/img/@item.Image" /> 
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen" viewBox="0 0 16 16" style="width:25px;height:25px;color:saddlebrown">
                    <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001zm-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708l-1.585-1.585z" />
                </svg>
        }

        <div class="from-group my-3">
            <label class="mt-5">Add Photo</label>
            <input class="form-control" id="customFile" asp-for="Photos">
            <span class="text-danger" asp-validation-for="Photos"></span>
        </div>
        
        <div class="buttons my-3">
            <button type="submit" class="btn btn-success">Submit</button>
            <a asp-action="Index" class="btn btn-light">Cancel</a>
        </div>
    </form>
</div>

