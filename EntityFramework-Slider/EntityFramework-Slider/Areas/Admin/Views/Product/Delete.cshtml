@model Product
@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>


<div style="padding-left:200px" class="container my-5">
    <h1>Create</h1>
   
        <div class="form-group">
            <label>Name</label>
            <input class="form-control" disabled type="text" id="Product-Name" value="@ViewBag.name" asp-for="Name"></textare>
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>

        <div class="form-group">
            <label class="mt-3">Description</label>
            <input class="form-control" disabled type="text" id="Product-Desc" value="@ViewBag.desc" asp-for="Description"></input>
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>

        <div class="from-group">
            <label class="mt-3">Count</label>
            <input class="form-control" disabled type="number" id="customFile" asp-for="Count">
            <span class="text-danger mt-2" asp-validation-for="Count"></span>
        </div>

        <div class="from-group">
            <label class="mt-3">Price</label>
            <input class="form-control" disabled type="number" step=".01" id="customFile" asp-for="Price">
            <span class="text-danger mt-2" asp-validation-for="Price"></span>
        </div>

        <div class="form-group">
            <label class="mt-3">Product's Category</label>
            <input class="form-control" disabled id="customFile" asp-for="Category.Name"></input>
        </div>


        <div class="form-group">

            @foreach (var item in Model.Images)
            {
                <img class="my-2" style="width:150px;height:150px" src="~/img/@item.Image" />
            }

        </div>

        <div class="form-group">
            <h3 class="text-danger">Are you sure to delete product?</h3>
        </div>

         <form class="forms-sample" asp-action="Delete" method="post">
             <div class="form-group">
                <div class="my-3">
                    <button type="submit" class="btn btn-success">Yes</button>
                     <a type="button" asp-action="Index" class="btn btn-light text-danger" style="border:1px solid red">No</a>
               </div>
             </div>
         </form>
</div>
