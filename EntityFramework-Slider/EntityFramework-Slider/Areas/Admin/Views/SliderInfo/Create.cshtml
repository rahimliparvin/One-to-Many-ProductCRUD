@model SliderInfo
@{
    ViewData["Title"] = "Create";
}


<div style="padding-left:200px" class="container my-5">
    <h1>Create</h1>
    <form class="forms-sample" asp-action="Create" method="post" enctype="multipart/form-data">
        <input class="form-control" id="customFile" asp-for="Photo">
        <span class="text-danger" asp-validation-for="Photo"></span>
        <label>Title</label>
        <textarea class="form-control" id="Create-sliderinfo-title" rows="5" asp-for="Title"></textarea>
        <span class="text-danger" asp-validation-for="Title"></span>
        <label>Description</label>
        <textarea class="form-control" id="Create-sliderinfo-description" rows="5" asp-for="Description"></textarea>
        <span class="text-danger" asp-validation-for="Description"></span>
        <div class="my-3">
            <button type="submit" class="btn btn-success">Submit</button>
            <a type="button" asp-action="Index" class="btn btn-light">Cancel</a>
        </div>
    </form>
</div>

@section Scripts{


    <script src="~/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace("Create-sliderinfo-title");
    </script>

    <script>
        CKEDITOR.replace("Create-sliderinfo-description");
    </script>
}
